# Grokipedia API - Production Configuration

# Server settings
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
DEBUG=false

# API Settings
BASE_URL=https://grokipedia.com
TIMEOUT=30
REQUEST_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_PER_MINUTE=10

# Redis Cache
REDIS_ENABLED=true
REDIS_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
CACHE_ENABLED=true

# Database (for API Key Management)
# SQLite: sqlite:///./grokipedia_api.db
# PostgreSQL: postgresql://user:password@localhost:5432/grokipedia_api
# MySQL: mysql+pymysql://user:password@localhost:3306/grokipedia_api
DATABASE_URL=sqlite:///./grokipedia_api.db

# API Authentication
API_KEY_AUTH_ENABLED=true
ADMIN_KEY=your-admin-key-change-in-production

# Monitoring & Error Tracking
SENTRY_ENABLED=true
SENTRY_DSN=https://your-sentry-dsn@sentry.io/1234567
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=json

# CORS Settings
CORS_ORIGINS=["https://yourdomain.com", "https://app.yourdomain.com"]
CORS_CREDENTIALS=true
CORS_METHODS=["GET", "HEAD", "OPTIONS"]

# API Documentation
DOCS_ENABLED=true
REDOC_ENABLED=true

